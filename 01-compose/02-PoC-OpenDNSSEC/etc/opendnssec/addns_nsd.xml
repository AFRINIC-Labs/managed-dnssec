<?xml version="1.0" encoding="UTF-8"?>

<Adapter>
 	<DNS>
		<TSIG>
			<Name>nsd_master_key</Name>
			<!-- http://www.iana.org/assignments/tsig-algorithm-names -->
			<Algorithm>hmac-sha256</Algorithm>
			<!-- base64 encoded secret -->
			<Secret>TlNEX1RTSUdfU0VDUkVUX0tFWQo=</Secret>
		</TSIG>
		<TSIG>
			<Name>nsd_slave_key</Name>
			<!-- http://www.iana.org/assignments/tsig-algorithm-names -->
			<Algorithm>hmac-sha256</Algorithm>
			<!-- base64 encoded secret -->
			<Secret>TkRTX01BU1RFUl9UU0lHX0tFWQo=</Secret>
		</TSIG>

		<Inbound>
			<!-- Address of host to request XFR from -->
			<RequestTransfer>
				<Remote>
					<Address>172.16.10.5</Address>
					<Port>53</Port>
					<Key>nsd_master_key</Key>
				</Remote>
			</RequestTransfer>

			<!-- Allow NOTIFY messages from host -->
			<AllowNotify>
				<Peer>
					<Prefix>172.16.10.5</Prefix>
					<Key>nsd_master_key</Key>
				</Peer>
			</AllowNotify>
		</Inbound>

		<Outbound>
			<!-- Provide XFR to host -->
			<ProvideTransfer>
				<!-- EXAMPLE: provide XFR to 1.2.3.5 with key secret.example.com -->
				<Peer>
					<Prefix>172.16.10.10</Prefix>
					<Key>nsd_slave_key</Key>
				</Peer>
			</ProvideTransfer>
	
			<!-- Send NOTIFY messages to host -->
			<Notify>
				<!-- EXAMPLE: send NOTIFY to 1.2.3.5 on the default port 53 -->
				<Remote>
					<Address>172.16.10.10</Address>
					<Key>nsd_slave_key</Key>
				</Remote>
			</Notify>
		</Outbound>
	</DNS>
</Adapter>
